<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <EditText
        android:id="@+id/et_ingredient_name"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/outline_raidus_shape"
        android:ems="10"
        android:foregroundGravity="center"
        android:hint="ID를 입력해주세요."
        android:includeFontPadding="false"
        android:inputType="textPersonName"
        android:paddingLeft="12dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_ingredient_life"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/outline_raidus_shape"
        android:ems="10"
        android:hint="PW를 입력해주세요."
        android:inputType="textPassword"
        android:paddingLeft="12dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ingredient_name" />

    <EditText
        android:id="@+id/et_password_check"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/outline_raidus_shape"
        android:ems="10"
        android:hint="PW를 확인해주세요."
        android:inputType="textPassword"
        android:paddingLeft="12dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ingredient_life" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_marginTop="49dp"
        android:background="@drawable/solid_raidus_shpae"
        android:text="로그인"
        android:textColor="#5f5144"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password_check" />

    <Button
        android:id="@+id/btn_login2"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/outline_raidus_shape"
        android:text="이미 계정을 가지고 계십니까?"
        android:textColor="#5f5144"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />

</androidx.constraintlayout.widget.ConstraintLayout>